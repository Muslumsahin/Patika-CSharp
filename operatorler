namespace degisken{
    class Program{
        static void Main(string[] args){
           //Atama İşlemleri
           int x = 3;
           int y = 4;
           y = y+2;

           Console.WriteLine(y);
           y +=2;
           Console.WriteLine(y);
           y/=1;
           Console.WriteLine(y);
           x *=2;
           Console.WriteLine(x);

           // Mantıksal Operatörler

           bool isSuccess = true;
           bool isCompleted = false;

           if(isSuccess && isCompleted){
            Console.WriteLine("Perfect!");
           }
           if(isSuccess || isCompleted){
            Console.WriteLine("Great!");
           }
           if(isSuccess && !isCompleted){
            Console.WriteLine("Fine!");
           }


           // İlişkisel Oparatörler
          int a = 3;
          int b = 4;
          bool sonuc = a<b;

          Console.WriteLine(sonuc);
          sonuc= a>b;
          Console.WriteLine(sonuc);
          sonuc = a>=b;
          Console.WriteLine(sonuc);
          sonuc= a<=b;
          Console.WriteLine(sonuc);
          sonuc = a==b;
          Console.WriteLine(sonuc);
          sonuc = a!=b;
          Console.WriteLine(sonuc);


        }
    }
}
